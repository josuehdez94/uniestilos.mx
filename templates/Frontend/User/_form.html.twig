{% form_theme form 'bootstrap_4_layout.html.twig' %}
{{ form_start(form) }}
<div id="all">
    <div id="content">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <!-- breadcrumb-->
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="{{ url('frontend_home_page') }}">Inicio</a></li>
                            <li aria-current="page" class="breadcrumb-item active">Nueva cuenta</li>
                        </ol>
                    </nav>
                    
                </div>
                <div class="col-lg-6">
                    <div class="box">
                        <h1>Nueva cuenta</h1>
                        <p class="lead">Aún no estas registrado?</p>
                        <p>¡Registrate para obtener increibles descuentos y promociones, solo te tomara un minuto crear tu cuenta!</p>
                        <p class="text-muted">Si tienes alguna pregunta, por favor contactanos al siguiente correo <a href="contact.html">contactanos</a></p>
                        <hr>
                        {#<form action="customer-orders.html" method="post">#}
                        {{ form_errors(form) }}
                            <div class="form-group">
                                {{ form_widget(form.nombre) }}
                                {{ form_errors(form.nombre) }}
                            </div>
                            <div class="row">
                                <div class="col">
                                    {{ form_widget(form.apellidoPaterno) }}
                                    {{ form_errors(form.apellidoPaterno) }}
                                </div>
                                <div class="col">
                                    {{ form_widget(form.apellidoMaterno) }}
                                    {{ form_errors(form.apellidoMaterno) }}
                                </div>
                            </div>
                            <div class="form-group mt-3">
                               {{ form_widget(form.email) }}
                               {{ form_errors(form.email) }}
                            </div>
                            <div class="form-group">
                                {{ form_widget(form.password.first,{'attr':{'placeholder': 'Nueva contraseña'}}) }}
                                {{ form_errors(form.password.first) }}
                            </div>
                             <div class="form-group">
                                {{ form_widget(form.password.second,{'attr':{'placeholder': 'Repetir contraseña'}}) }}
                                {{ form_errors(form.password.second) }}
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-user-md"></i> Crear cuenta</button>
                            </div>
                        {#</form>#}
                    </div>
                </div>
                <div class="col-lg-6">

                </div>
            </div>
        </div>
    </div>
</div>
{{ form_end(form) }}
