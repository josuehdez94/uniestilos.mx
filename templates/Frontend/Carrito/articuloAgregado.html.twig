{% extends 'home_page/homePage2.html.twig' %}
{% block title %}articulo agregado {{articulo.sku}} {% endblock %}
{% block content %}
<div id="all">
    <div id="content">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <!-- breadcrumb-->
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="{{ url('frontend_home_page') }}">Inicio</a></li>
                            <li aria-current="page" class="breadcrumb-item active">articulo agregado {{ articulo.sku }}</li>
                        </ol>
                    </nav>
                </div>
                <div id="basket" class="col-lg-9">
                    <div class="box">
                        <form method="post" action="checkout1.html">
                            <div class="alert alert-success" role="alert">
                                <b>Has agregado a tu carrito</b>
                            </div>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                    <tr>
                                        <th colspan="2">Articulo</th>
                                        <th>Cantidad</th>
                                        <th>Precio</th>
                                        <th>Total</th>
                                        <th></th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <tr>
                                        <td><a href="{{ url('frontend_articulo_detalles', {'urlAmigable': articulo.urlAmigable}) }}"><img src="{{ articulo.fotografiaPrincipal.getWebThumbnailNombreArchivo }}" alt="White Blouse Armani"></a></td>
                                        <td><a href="{{ url('frontend_articulo_detalles', {'urlAmigable': articulo.urlAmigable}) }}">{{ articulo.descripcion }}</a></td>
                                        <td>{{ cantidad|number_format(0) }}</td>
                                        <td>{{ '$' ~ articulo.precio1|number_format(2) }}</td>
                                        <td>
                                            {% set total = articulo.precio1 * cantidad %}
                                            {{ '$' ~ total|number_format(2)}}
                                        </td>
                                        <td><a href="{{ url('front_carrito_index') }}" class="btn btn-primary">Ver carrito</a></td>
                                    </tr>
                                    </tbody>
                                    <tfoot>
                                    </tfoot>
                                </table>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- /.col-md-3-->
            </div>
        </div>
    </div>
</div>
{% endblock %}