    <form class="form-inline" method="get" action="{{ action }}" enctype="application/x-www-form-urlencoded">
        <select class="form-control mr-2" name="{{ filterFieldName }}">
            {% for field, label in fields %}
                <option value="{{ field }}"{% if selectedField == field %} selected="selected"{% endif %}>{{ label }}</option>
            {% endfor %}
        </select>
        <input  class="form-control mr-2" type="text" value="{{ selectedValue }}" name="{{ filterValueName }}" />
        <button class="btn btn-success">{#{{ options.button }}#}Filtrar</button>
    </form>
</div>