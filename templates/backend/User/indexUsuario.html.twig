{% extends 'backend/Default/homePage.html.twig' %}
{% block title %}Usuarios{% endblock %}
{% set menu = 'Administracion usuarios' %}
{% set list = 'Usuarios' %}
{% block content %}
    {% for label, messages in app.flashes(['Editado', 'Eliminado', 'Creado']) %}
        {% for message in messages %}
            <div class="col-md-8">
                <div class="alert {{ label == 'Editado' or label == 'Creado' or 'Eliminado' ? 'alert-success' : 'alert-danger' }} alert-dismissible fade show" role="alert" id="flashMessage">
                    <strong>{{label}}</strong>, {{ message }}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        {% endfor %}
        <script>
            $("#flashMessage").fadeTo(7000, 500).slideUp(500, function () {
                $("#flashMessage").alert('close');
            });
        </script>
    {% endfor %}
<div class="contenido mt-2">
    <div class="page-title-area">
        <div class="row align-items-center">
            <div class="col-sm-6">
                <div class="breadcrumbs-area clearfix">
                    <ul class="breadcrumbs pull-left">
                        <li><a href="{{ url('backend_user_index') }}">Usuarios</a></li>
                        <li><span>Lista de usuarios</span></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <h4 class="mt-4">Usuarios</h4>
    <div class="table-responsive-md">
        <table class="table table-sm table-hover mt-3">
            <thead class="text-center thead-light">
                <tr>
                    <th>Nombre</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody class="text-center">
                {% for user in users %}
                    <tr>
                        <td>{{ user.nombreCompleto }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                        <td>
                            <ul class="d-flex justify-content-center">
                                {# <li class="mr-3">
                                    <a class="mx-2" href="{{ url('backend_subcategoria_detalles', {'id': user.id}) }}">
                                        <i class="fa fa-eye text-info"></i>
                                    </a>
                                </li> #}
                                <li class="mr-3">
                                    <a class="mx-2" href="{{ url('backend_user_asignar_roles', {'usuario_id': user.id}) }}">
                                        <i class="fa fa-unlock text-primary"></i>
                                    </a>
                                </li>
                                {# <li class="mr-3">
                                    <a class="mx-2" href="#eliminarSubcategoria" data-toggle="modal" data-target="#eliminarSubcategoria-{{ user.id }}">
                                        <i class="ti-trash text-danger"></i>
                                    </a>
                                </li> #}
                            </ul>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8">No hay usuarios</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}

