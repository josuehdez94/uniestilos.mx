{% extends 'backend/Categoria/indexCategoria.html.twig' %}
{% block title %}Detalles subcategoria{% endblock %}
{% block content %}
<div class="contenido mt-2">
    <div class="page-title-area">
        <div class="row align-items-center">
            <div class="col-sm-6">
                <div class="breadcrumbs-area clearfix">
                    <ul class="breadcrumbs pull-left">
                        <li><a href="{{ url('backend_categoria_index') }}">Lista de categorias</a></li>
                        <li><a href="{{ url('backend_categoria_detalles', {'id': subcategoria.categoria.id }) }}">{{ subcategoria.categoria.nombre }}</a></li>
                        <li><a href="{{ url('backend_subcategoria_categoria', {'categoria_urlAmigable': subcategoria.categoria.urlAmigable }) }}">Subcategorias</a></li>
                        <li><span>Detalles {{ subcategoria.nombre }}</span></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="mt-2">
        <h4>Detalles subcategoria <b>{{ subcategoria.nombre }}</b></h4>
    </div>
    <div class="row">
        <div class="col-6">
            <div class="table-responsive-md">
                <table class="table table-sm table-hover">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ subcategoria.id }}</td>
                    </tr>
                    <tr>
                        <th>Nombre</th>
                        <td>{{ subcategoria.nombre }}</td>
                    </tr>
                    <tr>
                        <th>Url amigable</th>
                        <td>{{ subcategoria.urlAmigable }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <div class="text-right">
                <a class="btn btn-sm btn-outline-primary" href="{{ url('backend_subcategoria_categoria', {'categoria_urlAmigable': subcategoria.categoria.urlAmigable }) }}">Regresar</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
