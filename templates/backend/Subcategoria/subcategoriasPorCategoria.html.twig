{% extends 'backend/Categoria/indexCategoria.html.twig' %}
{% block title %}Subcategorias por categoria{% endblock %}
{% block content %}
<div class="contenido mt-2">
    <div class="page-title-area">
        <div class="row align-items-center">
            <div class="col-sm-6">
                <div class="breadcrumbs-area clearfix">
                    <ul class="breadcrumbs pull-left">
                        <li><a href="{{ url('backend_categoria_index') }}">Lista de categorias</a></li>
                        <li><a href="{{ url('backend_categoria_detalles', {'id': categoria.id }) }}">{{ categoria.nombre }}</a></li>
                        <li><span>Subcategorias</span></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-8">
            <h4 class="mt-2">Subcategorias de {{ categoria.nombre }}</h4>
        </div>
        <div class="col-4 text-right">
            <div class="invoice-buttons">
                <a class="invoice-btn" href="{{ url('backend_subcategoria_nueva', {'categoria_urlAmigable': categoria.urlAmigable }) }}">
                    <i class="fa fa-plus"></i>
                </a>
            </div>
        </div>
    </div>
    <hr>
    <div class="table-responsive">
        <table class="table table-sm table-hover mt-3">
            <thead class="text-center thead-light">
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>UrlAmigable</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody class="text-center">
            {% for subcategoria in categoria.subcategorias %}
                <tr>
                    <td>{{ subcategoria.id }}</td>
                    <td>{{ subcategoria.nombre }}</td>
                    <td>{{ subcategoria.urlAmigable }}</td>
                    <td>
                        <ul class="d-flex justify-content-center">
                            <li class="mr-3">
                                <a class="mx-2" href="{{ url('backend_subcategoria_detalles', {'id': subcategoria.id}) }}">
                                    <i class="fa fa-eye text-info"></i>
                                </a>
                            </li>
                            <li class="mr-3">
                                <a class="mx-2" href="{{ url('backend_subcategoria_editar', {'id': subcategoria.id}) }}">
                                    <i class="fa fa-edit text-primary"></i>
                                </a>
                            </li>
                            <li class="mr-3">
                                <a class="mx-2" href="#eliminarSubcategoria" data-toggle="modal" data-target="#eliminarSubcategoria-{{ subcategoria.id }}">
                                    <i class="ti-trash text-danger"></i>
                                </a>
                            </li>
                        </ul>
                    </td>
                </tr>
                <!-- Modal -->
                <div class="modal fade" id="eliminarSubcategoria-{{ subcategoria.id }}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Eliminar subcategoria <b>{{ subcategoria.nombre }}</b></h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                Â¿Seguro(a) de eliminar esta subcategoria ?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-sm btn-secondary" data-dismiss="modal">Cerrar</button>
                                {{ include('backend/Subcategoria/_delete_form.html.twig') }}
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <tr>
                    <td colspan="4">no hay registros</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
